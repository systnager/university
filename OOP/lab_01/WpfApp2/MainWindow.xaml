        <Label x:Name="label_Copy1" Content="C" HorizontalAlignment="Center" Margin="0,71,0,0" VerticalAlignment="Top" Height="23" Width="43" FontFamily="Arial" FontSize="14" Background="#FFFFFF"/>
        <TextBox x:Name="textBoxC" HorizontalAlignment="Left" Height="23" Margin="2,71,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontFamily="Arial" FontSize="14" Grid.Column="1" Grid.ColumnSpan="3"/>
        <Label x:Name="label7" Content="D" HorizontalAlignment="Center" Margin="0,99,0,0" VerticalAlignment="Top" Height="23" Width="43" FontFamily="Arial" FontSize="14" Background="#FFFFFF"/>
        <TextBox x:Name="textBoxD" HorizontalAlignment="Left" Height="23" Margin="2,99,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontFamily="Arial" FontSize="14" IsReadOnly="True" Grid.Column="1" Grid.ColumnSpan="3"/>
        <Label x:Name="label_Copy3" Content="Нагорний Т. Г. ВТ-23-1" HorizontalAlignment="Right" Margin="0,0,0,10" Height="40" Width="166" FontFamily="Arial" FontSize="14" VerticalAlignment="Bottom" Foreground="White" Grid.Column="3"/>
        <Label x:Name="label4" Content="X1" HorizontalAlignment="Center" Margin="0,127,0,0" VerticalAlignment="Top" Height="23" Width="43" FontFamily="Arial" FontSize="14" Background="#FFFFFF" RenderTransformOrigin="0.31,-2.924"/>
