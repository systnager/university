        <Label x:Name="label5" Content="X2" HorizontalAlignment="Center" Margin="0,158,0,0" VerticalAlignment="Top" Height="23" Width="43" FontFamily="Arial" FontSize="14" Background="#FFFFFF"/>
        <TextBox x:Name="textBoxX2" HorizontalAlignment="Left" Height="23" Margin="2,158,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontFamily="Arial" FontSize="14" IsReadOnly="True" Grid.Column="1" Grid.ColumnSpan="3"/>
        <Button x:Name="button" Content="Обчислити" HorizontalAlignment="Left" Height="27" Margin="49,198,0,0" VerticalAlignment="Top" Width="113" Click="button_Click_1" Grid.ColumnSpan="3"/>

    </Grid>
</Window>
